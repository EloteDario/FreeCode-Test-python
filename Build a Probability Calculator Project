import copy
import random

class Hat:
    
    def __init__(self, **kwargs):
        # Inicializa el sombrero con una lista de todas las bolas.  Ejemplo: ['red', 'red', 'blue']
        diccionario_de_sombreros = kwargs
        self.contents = []

        for color, cantidad in diccionario_de_sombreros.items():
            for iteracion in range(cantidad):
                self.contents.append("color")
        
        


    def draw(self, num_balls_drawn):
        # Extrer un número de bolas al azar sin reemplazo eliminandolas de self.contents
        if num_balls_drawn > len(self.contents):
            resultado = self.contents.copy()
            self.contents = []
            
            return resultado

        resultado = random.sample(self.contents, num_balls_drawn)

        for bola in resultado:
            self.contents.remove(bola)

        return resultado


